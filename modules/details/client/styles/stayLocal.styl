.details
    .stay-local-drawer
        margin-top: 500px
        height: 1000px

        .stay-local
            width: 288px
            height: auto
            margin-left: 25px

        .info-text-block
            margin-bottom: 10px
            width: 700px
            text-align: justify
            letter-spacing: -.05em

        .info-title
            font-size: 21px
            margin-bottom: 4px

        .non-last-address-block
            margin-right: 50px

        .address-block
            float: left
            margin-top: 10px
            cursor: pointer

            .address
                text-align: center
                color: secondary-font-color
                margin-top: -3px
                margin-bottom: -3px
                letter-spacing: -.02em
                word-spacing: -.04em
                font-size: 14px

        .top-info
            float: left

        .bottom-info
            clear: both
            margin-top: -100px

